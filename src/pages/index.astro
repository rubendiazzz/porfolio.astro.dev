---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import ContactForm from "../components/ContactForm.astro";
import Contact from "../components/icons/Contact.astro";
---

<Layout
  title="Ruben Diaz - Portfolio"
  description="Ruben Diaz - Web Developer and Graphic Designer from Lugo, Galicia, Spain"
>
  <main class="px-4" id="about">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-20 mb-4 hover:scale-125 transition text-center mx-auto md:mx-0 lg:mx-0 xl:mx-0"
        src="https://media.licdn.com/dms/image/D4D03AQE-y1TZwLE4TQ/profile-displayphoto-shrink_400_400/0/1699719026785?e=2147483647&v=beta&t=mBK7Yi1sVNKxmtasBOStHFOKsLu51w5gWEFakXRKz-I"
        alt="Ruben Diaz Photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10 justify-center md:justify-start lg:justify-start xl:justify-start"
      >
        Hey, I am Ruben! <a
          href="https://www.linkedin.com/in/ruubendiazz"
          title="Linkedin url"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-wrap max-w-[700px] text-center md:text-left lg:text-left"
      >
        <span class="font-extrabold">+5 years of experience.</span>
        <span class="text-yellow-200/90"
          >Web Developer and Graphic Designer.</span
        >
        <span class="text-red-200/90">From Lugo, Galicia, Spain ðŸ‡ªðŸ‡¸.</span>
        <span class="opacity-70"
          >I am specialized in creating unique software.</span
        >
      </h2>

      <nav
        class="flex gap-4 mt-8 flex-wrap justify-center md:justify-start lg:justify-start"
      >
        <SocialPill
          href="https://www.linkedin.com/in/ruubendiazz"
          title="Linkedin url"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill
          href="https://www.github.com/rubendiazzz"
          title="Github url"
        >
          <GithubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:rubendfraga@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          rubendfraga@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center md:justify-start lg:justify-start xl:justify-start"
      >
        <Briefcase class="size-7" />
        Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center md:justify-start lg:justify-start xl:justify-start"
      >
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white justify-center md:justify-start lg:justify-start xl:justify-start"
      >
        <CodeIcon class="size-7" />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contact">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center md:justify-start justify-center lg:justify-start text-white"
      >
        <Contact class="size-7" />
        Contact
      </h2>
      <ContactForm />
    </SectionContainer>
  </main>
</Layout>
